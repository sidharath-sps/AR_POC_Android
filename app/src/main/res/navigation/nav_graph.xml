<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.anchorfinder.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/hostAndResolveFragment"
        android:name="com.anchorfinder.fragments.HostAndResolveFragment"
        android:label="fragment_host_and_resolve"
        tools:layout="@layout/fragment_host_and_resolve" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.anchorfinder.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_hostAndResolveFragment"
            app:destination="@id/hostAndResolveFragment" />
    </fragment>
</navigation>